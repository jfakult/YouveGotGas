<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/ampmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textSize="24sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Notification Name"
        android:inputType="text"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/daysActiveList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonMonday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="M"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonTueday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="T"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonWednesday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="W"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonThursday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="T"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonFriday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="F"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonSaturday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="S"
                android:textColor="#ccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonSunday"
                android:layout_width="@dimen/toggle_button_size"
                android:layout_height="@dimen/toggle_button_size"
                android:background="@drawable/toggle_button_off"
                android:text="S"
                android:textColor="#ccc" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>